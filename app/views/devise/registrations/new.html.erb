<div class="outer_div_for_form_of_user_div">
  <div class="upper_part_link_to_root_path">
    <%= link_to "Back" , root_path%>
  </div>
  <div class="lower_outer_form_div_for_user">
      <div class="lower_inner_form_div_for_users">
        <h2>Sign up</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <div class="inner_form_div">
      <div class="form-floating mb-3">
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control", required: :true , id: "floatingInputName" %>
        <%= f.label :name, class: "form-label", for: "floatingInputName" %>
      </div>
      
      <div class="form-floating mb-3">
        <%= f.text_field :username, autofocus: true, autocomplete: "name", class: "form-control", required: :true , id: "floatingInputName" %>
        <%= f.label :username, class: "form-label", for: "floatingInputName" %>
      </div>
      
      <div class="form-floating mb-3">
        <%= f.file_field :image, class: "form-control" , id: "floatingInputImage" %>
        <%= f.label :image, class: "form-label", for: "floatingInputImage" %>
      </div>
      
      <div class="form-floating mb-3">
        <%= f.email_field :email, class: "form-control", required: :true , id: "floatingInputEmail", autocomplete: "email" %>
        <%= f.label :email, class: "form-label", for: "floatingInputEmail" %>
      </div>
      
      <div class="form-floating mb-3">
        <%= f.password_field :password, class: "form-control", required: :true , id: "floatingInputPassword", autocomplete: "new-password" %>
        <%= f.label :password, class: "form-label", for: "floatingInputPassword" %>
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
      
      <div class="form-floating mb-3">
        <%= f.password_field :password_confirmation, class: "form-control", required: :true , id: "floatingInputPasswordConfirmation", autocomplete: "new-password" %>
        <%= f.label :password_confirmation, class: "form-label", for: "floatingInputPasswordConfirmation" %>
      </div>
      
      <div class="actions" style="text-align: center;">
        <%= f.submit "Sign up", class: "btn btn-success" %>
      </div>
    </div>
  <% end %>

    <div style="margin-top: 1rem; font-size: 1.1rem;">Already have an Account? <%= render "devise/shared/links" %></div>
      </div>
  </div>
</div>